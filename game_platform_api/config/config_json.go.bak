package config

import (
	"encoding/json"
	"os"
)

var Config struct {
	Rpc struct {
		GameServiceAddr     string `json:"game_service_addr" yaml:"game_service_addr"`
		CpCenterServiceAddr string `json:"cp_center_service_addr" yaml:"cp_center_service_addr"`
	} `json:"rpc" yaml:"rpc"`
}

// InitJSON 从 JSON 文件读取配置（备选方案，无需外部依赖）
func InitJSON(path string) error {
	data, err := os.ReadFile(path)
	if err != nil {
		return err
	}

	if err := json.Unmarshal(data, &Config); err != nil {
		return err
	}
	return nil
}

