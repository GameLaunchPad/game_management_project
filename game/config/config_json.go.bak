package config

import (
	"encoding/json"
	"os"
)

var GlobalConfig *Config

type Config struct {
	MySQL struct {
		DSN string `json:"dsn" yaml:"dsn"`
	} `json:"mysql" yaml:"mysql"`
}

// InitJSON 从 JSON 文件读取配置（备选方案，无需外部依赖）
func InitJSON(path string) error {
	data, err := os.ReadFile(path)
	if err != nil {
		return err
	}

	var cfg Config
	err = json.Unmarshal(data, &cfg)
	if err != nil {
		return err
	}

	GlobalConfig = &cfg
	return nil
}

// InitYAML 从 YAML 文件读取配置（需要 gopkg.in/yaml.v3）
// 如果 golangci-lint 报错，可以注释掉这个函数，使用 InitJSON
